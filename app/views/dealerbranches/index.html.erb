<%= render 'layouts/backtoadmin' %>

<h2>DealerBranch List</h2>
<div class="row">
 <div class=" col-xs-offset-2 col-xs-8">
   <table class="table table-striped table-bordered table-hover">
     <thead>
         <tr>
         <th class="logiccs_table">ID</th>
         <th class="logiccs_table">Company</th>
         <th class="logiccs_table">Branch</th>
         <th colspan="2" class="logiccs_table">Operation</th>
         </tr>
     </thead> 
    <% @dealerbranches.each do |b| %>
       <tbody>
          <tr><td><%= b.id %></td>
              <td><%= b.dealercompany.name %></td>
              <td><%= b.name %></td>
              <td><%= link_to "Edit", edit_dealerbranch_path(b), class:"btn btn-xs btn-primary" %></td>
              <td><%= link_to "Delete", b,  class:"btn btn-xs btn-danger", method: :delete, data: { confirm: "You sure?" } %></td>

           </tr>
       </tbody>  
     
    <% end %> 
    </table>
    
     <%= link_to "New Dealer Branch", new_dealerbranch_path, class: "btn btn-default" %>

 </div>
 
</div> 

<%#= paginate @branches %>