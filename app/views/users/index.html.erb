<%= render 'layouts/backtoadmin' %>
<% if @companies.any? %>
<div class="row mb-2">
    <% @companies.each do |e| %>
       <div class="col-xs-3">
            <% btc = @target_c.id == e.id ? "btn-warning" : "btn-danger" %>
        
            <div class="col-2 mb-1">
                <%= link_to  e.name_e.truncate(22),
                    users_path(company: e.id),
                    class: "btn #{btc} btn-block" %>
             </div> 
        </div>
    <% end %>
</div>
<% end %>
<hr>
<div class="row">
 <div class="col-md-6 col-md-offset-3 table-responsive">
     <table class="table table-striped table-bordered table-hover">
        <thead>
         <tr>
             <th class="logiccs_table">Sytem-id</th>
             <th class="logiccs_table">Company</th>
             <th class="logiccs_table">Name</th>
             <th class="logiccs_table">Email</th>
         </tr>
        </thead>
        <tbody>
            <% @users.each do |user| %>
            <tr>
                <td> <%= user.id %></td>
                <td> <%= user.company.name_e %></td>
                <td> <%= user.name %></td>
                <td> <%= user.email %></td>
            </tr>
            <% end %>
            
        </tbody>
         
         
         
         
     </table>
  </div>
</div>