<%= render 'layouts/backtoadmin' %>
<h2>Admin Entry List</h2>

<div class="row">
 <div class="col-md-10 col-md-offset-1 table-responsive">
     <table class="table table-striped table-bordered table-hover">
        <thead>
         <tr>
             <th class="logiccs_table">Sytem-id</th>
             <th class="logiccs_table">Name</th>
             <th class="logiccs_table">Email</th>
             <th class="logiccs_table">Operation</th>
         </tr>
        </thead>
        <tbody>
            <% @admins&.each do |user| %>
            <tr class="bgwhite">
                <td> <%= user.id %></td>
                <td> <%= user.name %></td>
                <td> <%= user.email %></td>
                <td>
                  <%= link_to "Edit", edit_admin_path(user.id), class:"btn btn-success btn-xs" %>
                  <%= link_to "Delete", destroyadmin_admin_path(user.id), method: 'delete', class:"btn btn-danger btn-xs", data: { confirm: "You sure?" } %>
                </td>
            </tr>
            <% end %>
            
        </tbody>
         
         
         
         
     </table>
  </div>
</div>