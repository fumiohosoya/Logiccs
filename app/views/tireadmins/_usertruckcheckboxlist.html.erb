 <% unless trucks.present? %>
     No Trucks are listed
 <% else %>
    <%= form_with(model: @user.truckrelationships.build, local:true) do |f| %>
    <%= f.hidden_field :user_id, value: @user.id %>
    <div class="table-responsive table-striped">
    	<table class="table">
      <thead>
			    <tr>
			     <th class="col-xs-2 col-sm-3 col-md-3 col-lg-4">List</th>
			     <th class="col-xs-2 col-sm-3 col-md-3 col-lg-4">ID</th>
			     <th class="col-xs-2 col-sm-3 col-md-3 col-lg-4">Number</th>
			     <th class="col-xs-2 col-sm-3 col-md-3 col-lg-4">Maker</th>
			     <th class="col-xs-2 col-sm-3 col-md-3 col-lg-4">Model</th>
			    </tr>
			   </thead>
			   <tbody>
      <% trucks.each do |truck| %>
       <tr>
        <td class="col-xs-2 col-sm-3 col-md-3 col-lg-4"><%= check_box_tag 'check_truck_ids[]', truck.id, false,  {multiple:true} %></td>
        <td class="col-xs-2 col-sm-3 col-md-3 col-lg-4"><%= truck.vehicleid %></td>
        <td class="col-xs-2 col-sm-3 col-md-3 col-lg-4"><%= truck.number %></td>
        <td class="col-xs-2 col-sm-3 col-md-3 col-lg-4"><%= truck.maker %></td>
        <td class="col-xs-2 col-sm-3 col-md-3 col-lg-4"><%= truck.model %></td>
       </tr>
     <% end %>
     </tbody>
   </table>  
   <%= f.submit "check and regist", class: "btn btn-xs btn-success" %>
   <% end %>
  <% end %>