<%= render 'layouts/backtoadmin' %>
<h2>Approver List</h2>

<% if @companies.any? %>
<div class="row mb-2">
    <% @companies.each do |e| %>
       <div class="col-xs-3">
            <% btc = @target_c.id == e.id ? "btn-warning" : "btn-danger" %>
        
            <div class="col-2 mb-1">
                <%= link_to  e.name_e.truncate(22),
                    approvers_path(company: e.id),
                    class: "btn #{btc} btn-block" %>
             </div> 
        </div>
    <% end %>
</div>
<% end %>
<hr>

<div class="row">
 <div class="col-md-10 col-md-offset-1 table-responsive">
     <table class="table table-striped table-bordered table-hover">
        <thead>
         <tr>
             <th class="logiccs_table">System-id</th>
             <th class="logiccs_table">Company</th>
             <th class="logiccs_table">Name</th>
             <th class="logiccs_table">Email</th>
             <th class="logiccs_table">Operation</th>
         </tr>
        </thead>
        <tbody>
            <% @approvers.each do |user| %>
                <tr class="bgwhite">
                    <td> <%= user.id %></td>
                    <td> <%= user.company.name_e %></td>
                    <td> <%= user.name %></td>
                    <td> <%= user.email %></td>
                    <td>
                        <%= link_to "Edit", edit_approver_path(user), class: "btn btn-xs btn-success" %>
                        <%= link_to "Delete", user, method: "delete", data: { confirm: 'Are You Sure to delete?' }, class: "btn btn-xs btn-danger" %>
                    </td>
                </tr>
            <% end %>
        </tbody>
     </table>
  </div>
</div>